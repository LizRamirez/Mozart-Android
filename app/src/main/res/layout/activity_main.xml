<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A91DA">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/imgZero" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa con"
                android:id="@+id/txtIngresa"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#f0f0f0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtFacebook"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/icon_facebook"
                android:textSize="60sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#f0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtTwitter"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/icon_twitter"
                android:textSize="60sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#f0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtGooglePlus"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/icon_google_plus"
                android:textSize="60sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#f0f0f0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>