<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/foreground"
                android:endColor="@color/secondary_text"
                android:gradientRadius="radial"
                android:angle="90" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item
        android:right="2dp"
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/foreground"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>